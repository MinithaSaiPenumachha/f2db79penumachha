extends layout

block content
  h1= title

  form(id='tennisForm', action="/resource/tennises/", method="POST")
    div.form-group
        label.tennisAttr(for='tennis_Player_Name') tennis playername
        input#tennisplayername(type='text', name='tennis_Player_Name')
    div.form-group
        label.tennisAttr(for='tennis_Player_Age') tennis playerage
        input#tennisplayerage(type='text', name='tennisplayerage')
    div.form-group
        label.tennisAttr(for='tennis_No_Of_Matches_Played') tennis noofmatchesplayed
        input#tennisnoofmatchesplayed(type='number', name='tennis_No_Of_Matches_Played')
    input(type="submit")

  script.
    document.forms['tennisForm'].addEventListener('submit', (event) => {
      event.preventDefault();
      // TODO do something here to show user that form is being submitted
      fetch(event.target.action, {
        method: 'POST',
        body: new URLSearchParams(new FormData(event.target)) // event.target is the form
      }).then((resp) => {
        return resp.json(); // or resp.text() or whatever the server sends
      }).then((body) => {
        alert("Save succeded")
        // TODO handle body
      }).catch((error) => {
        // TODO handle error
        alert("Save failed " + error )
      });
    });